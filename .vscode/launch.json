{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Angular Debug FireFox",
            "type": "firefox",
            "reAttach": true,
            "request": "launch",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}/src",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                }
            ]
          },
          {
            "name": "Attach Angular Debug Firefox",
            "type": "firefox",
            "request": "attach",
            "url": "http://localhost:4200/#",
            "webRoot": "${workspaceFolder}"
          }
    ]
    }